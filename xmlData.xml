const express = require('express');
const axios = require('axios');
const xml2js = require('xml2js');
const app = express();
const port = 3000;

// Route to fetch JSON data
app.get('/api/json', async (req, res) => {
    try {
        const response = await axios.get('https://raw.githubusercontent.com/yventual1/json-xml/refs/heads/main/jsonData.json');
        res.json(response.data);
    } catch (error) {
        res.status(500).send('Error fetching JSON data');
    }
});

// Route to fetch XML data
app.get('/api/xml', async (req, res) => {
    try {
        const response = await axios.get('https://raw.githubusercontent.com/yventual1/json-xml/refs/heads/main/xmlData.xml', {
            headers: { 'Accept': 'application/xml' }
        });
        res.set('Content-Type', 'text/xml');
        res.send(response.data);
    } catch (error) {
        res.status(500).send('Error fetching XML data');
    }
});

// Bonus Challenge: XML â†’ JSON
app.get('/api/xml-to-json', async (req, res) => {
    try {
        const response = await axios.get('https://raw.githubusercontent.com/yventual1/json-xml/refs/heads/main/xmlData.xml');
        xml2js.parseString(response.data, (err, result) => {
            if (err) {
                res.status(500).send('Error parsing XML to JSON');
            } else {
                res.json(result);
            }
        });
    } catch (error) {
        res.status(500).send('Error fetching XML data');
    }
});

// Start server
app.listen(port, () => {
    console.log(`Server running at http://localhost:${port}`);
});
